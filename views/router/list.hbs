<h3><a class="btn btn-secondary" href="/router"> Create New</a> Store</h3>
<table>
    <thead>
        <tr>
            <th>Store_ID</th>
            <th>Store_Area</th>
            <th>Items_Available</th>
            <th>Daily_Customer_Count</th>
            <th>Store_Sale</th>

        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.ip}}</td>
            <td>{{this.origin}}</td>
            <td>{{this.metric}}</td>
            <td>{{this.localpref}}</td>
            <td>{{this.valid}}</td>

            <td>
                <a class="btn btn-primary btn-sm" href="/router/{{this.id}}">Edit</a>
                <a class="btn btn-primary btn-sm" href="/router/delete/{{this.id}}"
                    onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>